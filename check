#!/bin/bash

load inquirer

check() {
  config::load_file $SERVICE_NPM_CONFIG

  if [ -z "$SERVICE_NPM_HOST" ]; then
    inquirer::text "请输入 SERVICE_NPM_HOST:" value
    config::set SERVICE_NPM_HOST $value $SERVICE_NPM_CONFIG
  fi

  if [ -z "$SERVICE_NPM_PORT" ]; then
    inquirer::text "请输入 SERVICE_NPM_PORT:" value
    config::set SERVICE_NPM_PORT $value $SERVICE_NPM_CONFIG
  fi

  # if [ -z "$SERVICE_NPM_ADMIN_USERNAME" ]; then
  #   inquirer::text "请输入 SERVICE_NPM_ADMIN_USERNAME:" value
  #   config::set SERVICE_NPM_ADMIN_USERNAME $value $SERVICE_NPM_CONFIG
  # fi

  # if [ -z "$SERVICE_NPM_ADMIN_PASSWORD" ]; then
  #   inquirer::text "请输入 SERVICE_NPM_ADMIN_PASSWORD:" value
  #   config::set SERVICE_NPM_ADMIN_PASSWORD $value $SERVICE_NPM_CONFIG
  # fi

  if [ -z "$SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET" ]; then
    inquirer::text "请输入 SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET:" value
    config::set SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET $value $SERVICE_NPM_CONFIG
  fi

  if [ -z "$SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY" ]; then
    inquirer::text "请输入 SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY:" value
    config::set SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY $value $SERVICE_NPM_CONFIG
  fi

  if [ -z "$SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET" ]; then
    inquirer::text "请输入 SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET:" value
    config::set SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET $value $SERVICE_NPM_CONFIG
  fi
  
  # @TODO load again
  config::load_file $SERVICE_NPM_CONFIG

  # @TODO
  export SERVICE_NPM_HOST=$SERVICE_NPM_HOST
  export SERVICE_NPM_PORT=$SERVICE_NPM_PORT
  export SERVICE_NPM_ADMIN_USERNAME=$SERVICE_NPM_ADMIN_USERNAME
  export SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET=$SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET
  export SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY=$SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY
  export SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET=$SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET

  # @TODO update config
  sed -i 's/<NPM_ALY_OSS_BUCKET>/'${SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET}'/g' $SERVICE_NPM_VERDICCIO_CONFIG
  sed -i 's/<NPM_ALY_OSS_ACCESS_KEY>/'${SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY}'/g' $SERVICE_NPM_VERDICCIO_CONFIG
  sed -i 's/<NPM_ALY_OSS_ACCESS_SECRET>/'${SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET}'/g' $SERVICE_NPM_VERDICCIO_CONFIG
}

check $@
