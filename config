export SERVICE_NPM_NAME=npm-registry

export SERVICE_NPM_VERSION=v0.0.5
export SERVICE_NPM_CONFIG=$SERVICE_CONFIG

export SERVICE_NPM_UID=${UID:-1000}
export SERVICE_NPM_GID=${GID:-1000}

export SERVICE_NPM_HOST=0.0.0.0
export SERVICE_NPM_PORT=4873

export SERVICE_NPM_ADMIN_USERNAME=
export SERVICE_NPM_ADMIN_PASSWORD=
export SERVICE_NPM_ADMIN_EMIAL=

export SERVICE_NPM_ALLOW_CREATE_USER=false

export SERVICE_NPM_REGISTRY_ALY_OSS_BUCKET=
export SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_KEY=
export SERVICE_NPM_REGISTRY_ALY_OSS_ACCESS_SECRET=

export SERVICE_NPM_VERDICCIO_CONFIG=${SERVICE_CONFIGS}/config.yaml
# export SERVICE_NPM_VERDICCIO_HTPASSWOD=${SERVICE_CONFIGS}/htpasswd

if [ ! -f $SERVICE_NPM_CONFIG ]; then
  touch $SERVICE_NPM_CONFIG
fi

if [ ! -f $SERVICE_NPM_VERDICCIO_CONFIG ]; then
   cp $SERVICE_DIR/conf/config.yaml $SERVICE_NPM_VERDICCIO_CONFIG
fi